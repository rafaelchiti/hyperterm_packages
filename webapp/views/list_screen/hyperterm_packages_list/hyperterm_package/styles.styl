.homepageLink {
  &:hover {
    .title {
      text-decoration: underline;
    }
  }
}

.box {
  position: relative;
  border: .5px solid #4e4e4e;
  border-radius: 4px;
  padding: 10px;
}

.titleBar {
  background-color: #1A2226;
  height: 20px;
  width: 100%;
}

.title {
  font-size: 18px;
  font-weight: 500;
  color: #efefef;
  margin: 10px 0;
}

.subtitle {
  font-family: 'Lucida Grande';
  font-size: 14px;
  font-weight: 100;
  color: #969696;
  margin: 5px 0;
}

.keywordsList {
  margin-top: 20px;
  margin-bottom: 10px;
}

.keywordHash {
  color: #c3c3c3;
  margin-right: 1.5px;
}

.keyword {
  font-family: "Lucida Grande", Helvetica;
  font-size: 12px;
  color: #9e9b95;
  border-radius: 2px;
  display: inline-block;
  border: 1px solid #353535;
  margin-right: 6px;
  padding: 4px 6px;
}

.userRepoInfoBox {
  position: absolute;
  right: 20px;
  bottom: 20px;
  font-size: 14px;
}

.author {
  display: block;
  text-align: right;
  color: #cacaca;
}
